<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    app:strokeColor="@color/white"
    app:strokeWidth="4dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="16dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:paddingVertical="12dp"
            android:fontFamily="@font/badaboom"
            android:hint="Enter Email/Zeal Id/ Admission No."
            android:layout_marginEnd="-2dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:id="@+id/input"
            android:layout_marginTop="30dp"
            android:paddingEnd="6dp"
            app:layout_constraintBottom_toTopOf="@id/findButton"
            android:paddingStart="18dp"
            android:background="@drawable/search_item_background"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/findButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/giants"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="FIND ZEAL ID"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>